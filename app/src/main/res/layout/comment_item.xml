<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/dimen_8"
    android:id="@+id/container"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_marginStart="35dp"
        android:id="@+id/topicLayout"
        android:visibility="visible"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginBottom="@dimen/dimen_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:srcCompat="@drawable/outline_whatshot_24"
            android:layout_centerVertical="true"
            android:id="@+id/topicImageView"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:contentDescription="@string/bill_stage"
            app:tint="@color/colorGray" />

        <TextView
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:hint="@string/app_name"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/gray"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/topicImageView"
            android:id="@+id/topicTextView"
            android:layout_marginStart="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_alignParentStart="true"
            app:cardCornerRadius="@dimen/padding_8"
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/logo"
                android:scaleType="centerCrop"
                android:id="@+id/imageView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:contentDescription="@string/content_description" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_10"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_toEndOf="@id/cardView"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/app_name"
                android:maxLines="1"
                android:fontFamily="@font/open_sans_bold"
                android:hint="@string/app_name"
                android:textColor="@color/black"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>

            <TextView
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:text="@string/the_cotton_industry_development_bill_senate_bills_no_55_of_2021"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/open_sans_regular"
                android:textColor="@color/colorPrimary"
                android:id="@+id/subTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>

        </LinearLayout>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center_vertical|end"
            app:srcCompat="@drawable/ic_more_vert_black_24dp"
            android:id="@+id/optionImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/colorPrimary" />

    </RelativeLayout>

    <TextView
        android:text="@string/the_cotton_industry_development_bill_senate_bills_no_55_of_2021"
        android:layout_marginStart="@dimen/dimen_55"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:fontFamily="@font/open_sans_regular"
        android:id="@+id/subItemTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_marginStart="@dimen/dimen_55"
        android:id="@+id/linearLayout"
        android:visibility="gone"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    app:tint="@color/colorGray"
                    android:id="@+id/commentImageView"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_chat_white_24dp"
                    android:contentDescription="@string/like_post" />

                <TextView
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/commentTextView"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    app:tint="@color/colorGray"
                    android:id="@+id/upvoteImageView"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_baseline_arrow_circle_up_24"
                    android:contentDescription="@string/like_post" />

                <TextView
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/upvoteTextView"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    app:tint="@color/colorGray"
                    android:id="@+id/downvoteImageView"
                    android:layout_width="20dp"
                    android:layout_height="@dimen/dimen_20"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_baseline_arrow_circle_down_24"
                    android:contentDescription="@string/downvote" />

                <TextView
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/downvoteTextView"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="12.5sp"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    app:tint="@color/colorGray"
                    android:id="@+id/shareImageView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_share_blue_24dp"
                    android:contentDescription="@string/share_post" />

                <TextView
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/shareTextView"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="12.5sp"/>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        tools:itemCount="0"
        android:layout_marginStart="@dimen/dimen_55"
        android:orientation="vertical"
        android:scrollbars="none"
        tools:listitem="@layout/response_item"
        android:id="@+id/recyclerView"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>